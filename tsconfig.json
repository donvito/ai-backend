{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": [
      "src/types",
      "./node_modules/@types"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}